<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="right"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/tv_input_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="48sp" />

        </HorizontalScrollView>

        <TextView

            android:id="@+id/tv_output_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="36sp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black"

        android:columnCount="4"
        android:rowCount="5">


        <Button
            style="@style/button_style"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onACPressed"
            android:text="AC"

            />

        <Button
            style="@style/button_style"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onDelPressed"
            android:text="Del" />

        <Button
            style="@style/button_style"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onMinusPressed"
            android:text="-" />

        <Button
            style="@style/button_style"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="onDividePressed"
            android:text="/" />

        <Button
            style="@style/button_style"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onSevenPressed"
            android:text="7" />

        <Button
            style="@style/button_style"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onEightPressed"
            android:text="8" />

        <Button
            style="@style/button_style"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onNinePressed"
            android:text="9" />

        <Button
            style="@style/button_style"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="onMultiplyPressed"
            android:text="x"
            android:textSize="25sp" />

        <Button
            style="@style/button_style"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onFourPressed"
            android:text="4" />

        <Button
            style="@style/button_style"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onFivePressed"
            android:text="5" />

        <Button
            style="@style/button_style"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onSixPressed"
            android:text="6" />

        <Button
            style="@style/button_style"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="onPlusPressed"
            android:text="+" />

        <Button
            style="@style/button_style"
            android:layout_row="3"
            android:layout_column="0"
            android:text="1" />

        <Button
            style="@style/button_style"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onOnePressed"
            android:text="1" />

        <Button
            style="@style/button_style"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onTwoPressed"
            android:text="2" />

        <Button
            style="@style/button_style"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="onThreePressed"
            android:text="3" />

        <Button
            style="@style/button_style"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:backgroundTint="#FF9800"
            android:onClick="onEqualsPressed"
            android:text="=" />

        <Button
            style="@style/button_style"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onDotPressed"
            android:text="." />

        <Button
            style="@style/button_style"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="onOneZeroPressed"
            android:text="0" />

        <Button
            style="@style/button_style"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="onTwoZerosPressed"
            android:text="00" />


    </GridLayout>


</LinearLayout>